            </aside>
        </div> <!-- /#secondary -->
        @RenderBody()
        <footer class="footer">
            <p>© Von 2013. All right reserved.</p>
            <div class="socials-footer">
                <a class="btn btn-facebook" href="#" title="Facebook">
                    <i class="fa fa-facebook"></i>

                                }
                                <time datetime="2015-01-30" class="comment__date">@comm.Created.ToString("MMM dd, yyyy")</time>
                                <p>
                                    @comm.Body
                                </p>
                                @if (User.IsInRole("Admin"))
                                {
                                    <div class="btn-group pull-right" role="group" aria-label="comment__actions">
                                        @using (Html.BeginForm("Delete", "Comments", FormMethod.Post))
                                        {
                                            @Html.AntiForgeryToken();

                                            <input type="hidden" name="id" value="@comm.Id" />
                                            <button type="submit" class="btn btn-default btn-xs">
                                                <i class="fa fa-times"></i>
                                                Remove
